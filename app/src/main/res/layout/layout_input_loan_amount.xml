<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_input_loan_amount"
    android:layout_width="match_parent"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_enter_loan_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:text="@string/enter_loan_amount"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_nom_loan_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/ibm_plex_sans_semi_bold"
            android:inputType="number"
            android:paddingStart="80dp"
            android:paddingEnd="32dp"
            android:textColor="@color/dark"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_enter_loan_amount" />

        <ImageView
            android:id="@+id/img_plus_loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/img"
            android:foreground="@drawable/selectable_curve"
            app:layout_constraintBottom_toBottomOf="@+id/edit_nom_loan_amount"
            app:layout_constraintEnd_toEndOf="@+id/edit_nom_loan_amount"
            app:srcCompat="@drawable/ic_plus_outline" />

        <ImageView
            android:id="@+id/img_minus_loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/img"
            android:foreground="@drawable/selectable_curve"
            app:layout_constraintBottom_toBottomOf="@+id/edit_nom_loan_amount"
            app:layout_constraintStart_toStartOf="@+id/edit_nom_loan_amount"
            app:srcCompat="@drawable/ic_minus_outline" />

        <TextView
            android:id="@+id/lbl_rp_loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ibm_plex_sans_semi_bold"
            android:text="@string/txt_rp"
            android:textColor="@color/dark"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_nom_loan_amount"
            app:layout_constraintStart_toEndOf="@+id/img_minus_loan_amount" />

        <TextView
            android:id="@+id/lbl_min_loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_amount_requirement"
            android:textSize="16sp"
            android:textColor="@color/darkO05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_nom_loan_amount" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/loan_amount_requirement_desc"
            android:textSize="16sp"
            android:textColor="@color/darkO05"
            app:layout_constraintStart_toStartOf="@+id/lbl_min_loan_amount"
            app:layout_constraintTop_toBottomOf="@+id/lbl_min_loan_amount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>