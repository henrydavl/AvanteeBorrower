<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_fr_loan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ToolbarTheme">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_tb_fr_loan"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ToolbarTheme"
            app:collapsedTitleTextAppearance="@style/ToolbarTheme.Collapsed"
            app:expandedTitleMargin="16dp"
            app:expandedTitleTextAppearance="@style/ToolbarTheme.Expanded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_fr_loan"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="6dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_loan_color"
                app:title="@string/loan"
                app:titleTextAppearance="@style/ToolbarTheme"
                app:titleTextColor="@color/dark" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- TODO: If no active loan -->
    <include
        android:id="@+id/loanEmpty"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        layout="@layout/fragment_loan_is_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fr_loan_an_active_loan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Todo: Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_loan_active_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_loan_active_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ibm_plex_sans_semi_bold"
                    android:text="@string/kta_loan_desc"
                    android:textSize="19sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_loan_active_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_plex_sans_semi_bold"
                    android:textColor="@color/darkO05"
                    android:text="@string/dummy_loan_id"
                    android:textSize="19sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_loan_active_type"
                    app:layout_constraintTop_toBottomOf="@+id/tv_loan_active_type" />

                <TextView
                    android:id="@+id/tv_loan_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/ibm_plex_sans_semi_bold"
                    android:textAllCaps="true"
                    android:text="@string/loan_status_pending"
                    android:textColor="@color/pending"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_loan_active_type"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_staff_loan" />

            <!-- Todo: Tenor -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_loan_tenor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_loan_tenor_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tenor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_tenor_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ibm_plex_sans_semi_bold"
                            android:textSize="24sp"
                            android:text="@string/dummy_tenor"
                            app:layout_constraintStart_toStartOf="@+id/textView28"
                            app:layout_constraintTop_toBottomOf="@+id/textView28" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/ibm_plex_sans_semi_bold"
                            android:text="@string/month"
                            app:layout_constraintBottom_toBottomOf="@id/tv_tenor_total"
                            app:layout_constraintStart_toEndOf="@+id/tv_tenor_total" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_loan_tenor_paid"
                        android:layout_marginStart="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView28_paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tenor_paid"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_tenor_paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ibm_plex_sans_semi_bold"
                            android:textSize="24sp"
                            android:text="@string/dummy_tenor_paid"
                            app:layout_constraintStart_toStartOf="@+id/textView28_paid"
                            app:layout_constraintTop_toBottomOf="@+id/textView28_paid" />

                        <TextView
                            android:id="@+id/textView26_paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/ibm_plex_sans_semi_bold"
                            android:text="@string/month"
                            app:layout_constraintBottom_toBottomOf="@id/tv_tenor_paid"
                            app:layout_constraintStart_toEndOf="@+id/tv_tenor_paid" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_loan_tenor_left"
                        android:layout_marginStart="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView28_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tenor_left"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_tenor_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ibm_plex_sans_semi_bold"
                            android:textSize="24sp"
                            android:text="@string/dummy_tenor_left"
                            app:layout_constraintStart_toStartOf="@+id/textView28_left"
                            app:layout_constraintTop_toBottomOf="@+id/textView28_left" />

                        <TextView
                            android:id="@+id/textView26_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/ibm_plex_sans_semi_bold"
                            android:text="@string/month"
                            app:layout_constraintBottom_toBottomOf="@id/tv_tenor_left"
                            app:layout_constraintStart_toEndOf="@+id/tv_tenor_left" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Todo: Loan amount -->
            <HorizontalScrollView
                android:id="@+id/sv_sum_loan_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fillViewport="true"
                android:orientation="horizontal"
                android:scrollbarSize="0dp">

                <LinearLayout
                    android:id="@+id/lin_sv_sum_loan_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_sum_loan_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:cardBackgroundColor="@color/pending"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_sum_loan_active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@color/white_transparent_80"
                            android:paddingEnd="16dp"
                            tools:ignore="RtlSymmetry">

                            <TextView
                                android:id="@+id/lbl_loan_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/ibm_plex_sans_medium"
                                android:maxLines="1"
                                android:text="@string/loan_amount"
                                android:textAllCaps="true"
                                android:textColor="@color/darkO05"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/lbl_loan_amount_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                                android:gravity="start"
                                android:text="@string/dummy_loan_amount"
                                android:textColor="@color/dark"
                                android:textSize="30sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/lbl_loan_amount" />

                            <TextView
                                android:id="@+id/lbl_loan_application_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/ibm_plex_sans_medium"
                                android:maxLines="1"
                                android:text="@string/application_date"
                                android:textColor="@color/darkO05"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/lbl_loan_amount_value" />

                            <TextView
                                android:id="@+id/lbl_loan_application_date_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/ibm_plex_sans_medium"
                                android:maxLines="1"
                                android:text="@string/application_date_dummy"
                                android:textColor="@color/dark"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@+id/lbl_loan_application_date"
                                app:layout_constraintStart_toEndOf="@+id/lbl_loan_application_date"
                                app:layout_constraintTop_toTopOf="@+id/lbl_loan_application_date" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_installment_loan_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/pending"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_cv_installment_loan_active"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:background="@color/white_transparent_80"
                            android:paddingEnd="16dp"
                            tools:ignore="RtlSymmetry">

                            <TextView
                                android:id="@+id/lbl_installment_loan_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/ibm_plex_sans_medium"
                                android:maxLines="1"
                                android:text="@string/installment_interest_per_month"
                                android:textAllCaps="true"
                                android:textColor="@color/darkO05"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txt_installment_loan_active_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                                android:text="@string/dummy_monthly_installment"
                                android:textColor="@color/dark"
                                android:textSize="30sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/lbl_installment_loan_active" />

                            <TextView
                                android:id="@+id/lbl_installment_loan_due"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/ibm_plex_sans_medium"
                                android:maxLines="1"
                                android:text="@string/installment_due"
                                android:textColor="@color/darkO05"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txt_installment_loan_active_value" />

                            <TextView
                                android:id="@+id/lbl_installment_loan_due_value"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/ibm_plex_sans_medium"
                                android:maxLines="1"
                                android:text="@string/application_date_dummy"
                                android:textColor="@color/dark"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@+id/lbl_installment_loan_due"
                                app:layout_constraintStart_toEndOf="@+id/lbl_installment_loan_due"
                                app:layout_constraintTop_toTopOf="@+id/lbl_installment_loan_due" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_staff_loan" />

            <include
                android:id="@+id/layLoanActiveDetail"
                layout="@layout/layout_loan_active_detail"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- TODO: If loan pending -->
    <include
        android:id="@+id/cardLoanPending"
        layout="@layout/card_loan_application_pending"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <!-- TODO: If loan fundraise -->
    <include
        android:id="@+id/cardLoanFundRaise"
        layout="@layout/card_loan_fundraise"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <!-- TODO: If loan fundraise completed -->
    <include
        android:id="@+id/cardLoanFundRaiseCompleted"
        layout="@layout/card_loan_fundraise_completed"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <!-- TODO: If loan active -->
    <include
        android:id="@+id/cardLoanActive"
        layout="@layout/card_loan_active"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>