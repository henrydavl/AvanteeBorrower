                android:id="@+id/cv_take_ktp_fr_documents"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:foreground="@drawable/selectable_square"
                app:cardBackgroundColor="@color/lightest_neutral"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_reg_form_ktp_number">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_take_ktp_fr_documents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_take_ktp_fr_documents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/img"
                        android:src="@drawable/ic_take_picture"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_take_ktp_fr_documents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:maxLines="2"
                        android:text="@string/take_photo_of_ktp"
                        android:textColor="@color/darkO05"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_take_ktp_fr_documents"
                        app:layout_constraintEnd_toStartOf="@+id/img_cancel_take_ktp_fr_document"
                        app:layout_constraintStart_toEndOf="@+id/img_take_ktp_fr_documents"
                        app:layout_constraintTop_toTopOf="@+id/img_take_ktp_fr_documents" />

                    <ImageView
                        android:id="@+id/img_cancel_take_ktp_fr_document"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/img"
                        android:foreground="@drawable/selectable_curve"
                        android:src="@drawable/ic_cancel_24px"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!--TODO: CardView Taken KTP Preview -->
