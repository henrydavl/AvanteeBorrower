                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!--TODO: CardView Taken NPWP Preview -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img_npwp_fr_documents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                app:cardBackgroundColor="@color/dark"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_take_npwp_fr_documents">

                <Button
                    android:id="@+id/btn_npwp_fr_documents"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_rotate_right_dark_24"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white" />

                <ImageView
                    android:id="@+id/img_npwp_fr_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_no_photography_24" />
            </androidx.cardview.widget.CardView>

            <!--TODO: CardView Take Bank Book -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_take_bank_book_fr_documents"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:foreground="@drawable/selectable_square"
                app:cardBackgroundColor="@color/lightest_neutral"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_img_npwp_fr_documents">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_take_bank_book_fr_documents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

